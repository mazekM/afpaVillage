<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
         integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
         <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.5/css/select2.min.css">
         <link rel="stylesheet" href="{{ asset('build/app.css') }}">
        {% block stylesheets %}{% endblock %}

    </head>
    <body>
        <head>
          <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
              <ul class="navbar-nav mr-auto">
                <li class="nav-item {% if page_active is defined and page_active == 'accueil' %}active{% endif %}">
                  <a class="nav-link" href="{{path('accueil')}}">{% trans %}Accueil{% endtrans %} <span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item {% if page_active is defined and page_active == 'historique' %}active{% endif %}">
                  <a class="nav-link" href="{{path('historique')}}">{% trans %}Historique{% endtrans %} <span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item {% if page_active is defined and page_active == 'evenements' %}active{% endif %}">
                  <a class="nav-link" href="{{path('evenements')}}">{% trans %}Evenements{% endtrans %} <span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item {% if page_active is defined and page_active == 'contact' %}active{% endif %}">
                  <a class="nav-link" href="{{ path('contact') }}">{% trans %}Contact{% endtrans %}</a>
                </li>

                <li class="nav-item dropdown">
                  <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                      {% trans %}Langue{% endtrans %}
                  </a>
                  <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                    <a href="{{ path('langue', {'lang': 'fr'}) }}">Français</a>
                    <div class="dropdown-divider"></div>
                    <a href="{{ path('langue', {'lang': 'en'}) }}">English</a>
                    <div class="dropdown-divider"></div>
                    <a href="{{ path('langue', {'lang': 'ar'}) }}">عربية</a>
                  </div>
                </li>

                {% if app.user %}
                <li class="nav-item {% if page_active is defined and page_active == 'gestevenements' %}active{% endif %}">
                    <a class="nav-link" href="{{ path('admin.evenement.index') }}">{% trans %}Gestionnaire des événements{% endtrans %}</a>
                </li>
                {% endif %}
              </ul>
              {% if app.user %}
                <ul class="navbar-nav">
                  <li class="nav-item">
                  <a href="{{ path('logout')}}" class="nav-link">{% trans %}Se déconnecter{% endtrans %}</a>
                  </li>
                </ul> 

              {% endif %}
            </div>
            
          </nav>
        </head>
        {% for message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}
        {% block body %}{% endblock %}
        
        
        <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
        {{ encore_entry_script_tags('app') }}

        {% block javascripts %}{% endblock %}

        
    </body>
</html>
